/* Chart.js placeholder.
 * If your environment blocks CDN access, install Chart.js locally and replace this file.
 * This placeholder prevents 404s but does not provide charts.
 */
(function(){
  // Minimal stub: if CDN is blocked and no real Chart.js is available,
  // define window.Chart to show an explicit warning.
  // To get real charts offline, replace this file with the actual Chart.js UMD bundle.
  if (window.Chart) return;

  function StubChart(){
    var msg = 'Chart.js is not available (CDN blocked and local bundle missing).';
    try {
      var canvas = arguments[0];
      var ctx = canvas && canvas.getContext ? canvas.getContext('2d') : null;
      if (ctx) {
        ctx.clearRect(0,0,canvas.width,canvas.height);
        ctx.fillStyle = '#fb7185';
        ctx.font = '14px sans-serif';
        ctx.fillText(msg, 8, 24);
      }
    } catch { }
    console.warn(msg);
  }

  window.Chart = StubChart;
})();
