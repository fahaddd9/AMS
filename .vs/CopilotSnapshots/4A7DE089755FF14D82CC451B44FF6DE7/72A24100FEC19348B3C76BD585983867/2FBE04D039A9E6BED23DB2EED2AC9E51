@model IReadOnlyList<Attendence_Management_System.Data.TeacherAssignment>
@{
    ViewData["Title"] = "Teacher Assignments";
    var courses = (IReadOnlyList<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>?)ViewBag.Courses;
    var teachers = (IReadOnlyList<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>?)ViewBag.Teachers;
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">Teacher Assignments</h2>
        <div class="text-muted">Assign one or more teachers to a course.</div>
    </div>
    <a class="btn btn-outline-light" href="/AdminDashboard/Index">Back to Dashboard</a>
</div>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="ams-card p-3 p-md-4">
            <h5 class="mb-3">Assign Teacher</h5>
            <form method="post" action="/admin/assignments/create">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Course</label>
                    <select class="form-select" name="courseId" asp-items="courses">
                        <option value="">-- Select Course --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Teacher</label>
                    <select class="form-select" name="teacherId" asp-items="teachers">
                        <option value="">-- Select Teacher --</option>
                    </select>
                </div>

                <button class="btn btn-primary" type="submit">Assign</button>
            </form>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="ams-card p-3 p-md-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <h5 class="mb-0">Current Assignments</h5>
                <form method="get" class="d-flex gap-2">
                    <select class="form-select form-select-sm" name="courseId" asp-items="courses">
                        <option value="">All Courses</option>
                    </select>
                    <button class="btn btn-sm btn-outline-light" type="submit">Filter</button>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0" style="--bs-table-bg: transparent; --bs-table-border-color: rgba(255,255,255,.12);">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Teacher</th>
                            <th style="width: 130px" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-muted">No assignments found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var a in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@a.Course.UniqueCode</div>
                                    <div class="text-muted small">@a.Course.Name (@a.Course.Batch.Name)</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@a.Teacher.Name</div>
                                    <div class="text-muted small">@a.Teacher.Email</div>
                                </td>
                                <td class="text-end">
                                    <form method="post" action="/admin/assignments/@a.Id/delete">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="courseId" value="@Context.Request.Query["courseId"]" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Remove this assignment?');">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
