@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="ams-card p-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
        <div>
            <h2 class="mb-1">Teacher Dashboard</h2>
            <p class="text-muted mb-0">Mark and review attendance for your assigned courses.</p>
        </div>
        <form asp-controller="Account" asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-light" type="submit">Logout</button>
        </form>
    </div>

    <hr class="border-light border-opacity-10 my-4" />

    <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/teacher/attendance">
                <div class="ams-card p-3 h-100">
                    <div class="fw-semibold">Attendance</div>
                    <div class="text-muted small">View assigned courses and mark attendance.</div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/teacher/attendance">
                <div class="ams-card p-3 h-100">
                    <div class="fw-semibold">Reports</div>
                    <div class="text-muted small">Open a course and view the attendance report.</div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/teacher/analytics">
                <div class="ams-card p-3 h-100">
                    <div class="fw-semibold">Analytics</div>
                    <div class="text-muted small">Pie + bar charts (basic overview).</div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/teacher/students">
                <div class="ams-card p-3 h-100">
                    <div class="fw-semibold">Students</div>
                    <div class="text-muted small">Search students enrolled in your courses.</div>
                </div>
            </a>
        </div>
    </div>
</div>
