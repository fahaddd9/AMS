@model Attendence_Management_System.Models.Admin.Batches.BatchFormViewModel
@{
    ViewData["Title"] = Model.Id.HasValue ? "Edit Batch" : "Create Batch";
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">@ViewData["Title"]</h2>
        <div class="text-muted">Batch name must be unique (example: 2023-2027).</div>
    </div>
    <a class="btn btn-outline-light" href="/admin/batches">Back</a>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="ams-card p-4">
            <form method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., 2023-2027" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-light" href="/admin/batches">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
