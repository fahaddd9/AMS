@model IReadOnlyList<Attendence_Management_System.Models.Admin.Batches.BatchListItemViewModel>
@{
    ViewData["Title"] = "Batches";
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">Batches</h2>
        <div class="text-muted">Create batches (e.g., 2023-2027) before courses and student registration.</div>
    </div>
    <a class="btn btn-success" href="/admin/batches/create">+ Create Batch</a>
</div>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<div class="ams-card p-3 p-md-4">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0" style="--bs-table-bg: transparent; --bs-table-border-color: rgba(255,255,255,.12);">
            <thead>
                <tr>
                    <th style="width: 80px">ID</th>
                    <th>Name</th>
                    <th style="width: 140px">Students</th>
                    <th style="width: 120px">Courses</th>
                    <th style="width: 220px" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-muted">No batches created yet.</td>
                </tr>
            }
            else
            {
                foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Id</td>
                        <td class="fw-semibold">@b.Name</td>
                        <td>@b.StudentsCount</td>
                        <td>@b.CoursesCount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-light" href="/admin/batches/@b.Id/edit">Edit</a>
                            <form class="d-inline" method="post" action="/admin/batches/@b.Id/delete" onsubmit="return confirm('Delete this batch?');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
