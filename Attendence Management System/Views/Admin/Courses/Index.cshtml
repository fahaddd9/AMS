@model IReadOnlyList<Attendence_Management_System.Models.Admin.Courses.CourseListItemViewModel>
@{
    ViewData["Title"] = "Courses";
    var batches = (IReadOnlyList<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>?)ViewBag.Batches;
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">Courses</h2>
        <div class="text-muted">Each course belongs to a batch and has a unique code.</div>
    </div>
    <a class="btn btn-success" href="/admin/courses/create">+ Create Course</a>
</div>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<div class="ams-card p-3 p-md-4 mb-3">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-12 col-md-5">
            <label class="form-label">Filter by Batch</label>
            <select name="batchId" class="form-select" asp-items="batches">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-12 col-md-3">
            <button class="btn btn-outline-light w-100" type="submit">Apply</button>
        </div>
    </form>
</div>

<div class="ams-card p-3 p-md-4">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0" style="--bs-table-bg: transparent; --bs-table-border-color: rgba(255,255,255,.12);">
            <thead>
                <tr>
                    <th style="width: 120px">Code</th>
                    <th>Name</th>
                    <th style="width: 120px">Credits</th>
                    <th style="width: 220px">Batch</th>
                    <th style="width: 120px">Teachers</th>
                    <th style="width: 140px">Enrollments</th>
                    <th style="width: 220px" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="7" class="text-muted">No courses found.</td>
                </tr>
            }
            else
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-semibold">@c.UniqueCode</td>
                        <td>@c.Name</td>
                        <td>@c.CreditHours</td>
                        <td>@c.BatchName</td>
                        <td>@c.TeachersCount</td>
                        <td>@c.EnrollmentsCount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-light" href="/admin/courses/@c.Id/edit">Edit</a>
                            <form class="d-inline" method="post" action="/admin/courses/@c.Id/delete" onsubmit="return confirm('Delete this course?');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

    <div class="text-muted small mt-3">Next: teacher assignment + timetable slots per course.</div>
</div>
