@model IReadOnlyList<Attendence_Management_System.Data.Enrollment>
@{
    ViewData["Title"] = "Enrollments";
    var courses = (IReadOnlyList<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>?)ViewBag.Courses;
    var students = (IReadOnlyList<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>?)ViewBag.Students;
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">Enrollments</h2>
        <div class="text-muted">Admin can enroll students into courses (useful for testing).</div>
    </div>
    <a class="btn btn-outline-light" href="/AdminDashboard/Index">Back to Dashboard</a>
</div>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="ams-card p-3 p-md-4">
            <h5 class="mb-3">Enroll Student</h5>
            <form method="post" action="/admin/enrollments/create">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Course</label>
                    <select class="form-select" name="courseId" asp-items="courses">
                        <option value="">-- Select Course --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Student</label>
                    <select class="form-select" name="studentId" asp-items="students">
                        <option value="">-- Select Student --</option>
                    </select>
                </div>

                <button class="btn btn-primary" type="submit">Enroll</button>
            </form>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="ams-card p-3 p-md-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <h5 class="mb-0">Current Enrollments</h5>
                <form method="get" class="d-flex gap-2">
                    <select class="form-select form-select-sm" name="courseId" asp-items="courses">
                        <option value="">All Courses</option>
                    </select>
                    <button class="btn btn-sm btn-outline-light" type="submit">Filter</button>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0" style="--bs-table-bg: transparent; --bs-table-border-color: rgba(255,255,255,.12);">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Student</th>
                            <th style="width: 130px" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-muted">No enrollments found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var e in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@e.Course.UniqueCode</div>
                                    <div class="text-muted small">@e.Course.Name (@e.Course.Batch.Name)</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@e.Student.Name</div>
                                    <div class="text-muted small">@e.Student.Email</div>
                                </td>
                                <td class="text-end">
                                    <form method="post" action="/admin/enrollments/@e.Id/delete">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="courseId" value="@Context.Request.Query["courseId"]" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Remove this enrollment?');">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
