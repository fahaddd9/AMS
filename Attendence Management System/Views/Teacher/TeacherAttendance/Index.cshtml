@model IReadOnlyList<Attendence_Management_System.Models.Teacher.Attendance.TeacherCourseListItemViewModel>
@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
    <div>
        <h2 class="mb-1">My Courses</h2>
        <div class="text-muted">Select a course to mark attendance.</div>
    </div>
    <a class="btn btn-outline-light" href="/TeacherDashboard/Index">Back to Dashboard</a>
</div>

<div class="ams-card p-3 p-md-4">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0" style="--bs-table-bg: transparent; --bs-table-border-color: rgba(255,255,255,.12);">
            <thead>
                <tr>
                    <th style="width: 120px">Code</th>
                    <th>Name</th>
                    <th style="width: 220px">Batch</th>
                    <th style="width: 160px">Students</th>
                    <th style="width: 160px">Timetable Days</th>
                    <th style="width: 260px" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-muted">No courses assigned yet. Contact Admin.</td>
                </tr>
            }
            else
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-semibold">@c.Code</td>
                        <td>@c.Name</td>
                        <td>@c.BatchName</td>
                        <td>@c.EnrolledStudents</td>
                        <td>@c.TimetableDaysCount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-primary" href="/teacher/attendance/mark?courseId=@c.CourseId">Mark Today</a>
                            <a class="btn btn-sm btn-outline-light" href="/teacher/reports/course/@c.CourseId">Report</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
